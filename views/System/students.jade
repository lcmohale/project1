html
	head
		title Sisizathu Training Admin 
		link(href="https://fonts.googleapis.com/css?family=Open+Sans:400,700,800" rel="stylesheet")
		link(href="https://fonts.googleapis.com/css?family=Playfair+Display:400,700" rel="stylesheet")
		link(rel="stylesheet" href="css/animate.css")
		link(rel="stylesheet" href="css/icomoon.css")
		link(rel="stylesheet" href="css/bootstrap.css")
		link(rel="stylesheet" href="css/magnific-popup.css")
		link(rel="stylesheet" href="css/flexslider.css")
		link(rel="stylesheet" href="css/owl.carousel.min.css")
		link(rel="stylesheet" href="css/owl.theme.default.min.css")
		link(rel="stylesheet" href="fonts/flaticon/font/flaticon.css")
		link(rel="stylesheet" href="css/style.css")
		script(src="js/modernizr-2.6.2.min.js")
		style.
			.btn{border-radius:0%}
	body
		style.
			a {color:white;cursor:hand}
		div(id="page")
			nav(class="colorlib-nav" role="navigation")
				div(class="upper-menu")
					div(class="container")
						div(class="row")
							div(class="col-xs-4")
								p(style="color:white") Sisizathu Training Admin | Registered Students
							
							div(class="col-xs-6 col-md-push-2 text-right")
								p(style="color:white") <a onclick="history.go(-1)" >Back</a> | <a>Update Exams</a> | <a href="/">Sign Out</a>
			div(class="col-lg-12" style="padding-top:15px")
				table(class="table")
					thead
						tr <th></th> <th>Name</th> <th>Course</th><th>Student Type</th> <th>Date registered</th> <th>Documents</th><th>Results</th>  

					tbody
						- each student in students
							tr(style="font-size:11pt").
								<td class="active"></td> 
								<td>#{student.name} #{student.s_name}</td> 
								<td>#{student.course}</td>
								<td>#{student.course_duration}</td>
								<td>#{student.date_registered}</td>
								<td style="padding:1%"><a href='download/?id=#{student._id}' class="btn-sm btn-success"> Download </a></td>
								<td style="padding:1%"><a class="btn-sm btn-info"> Exams </a></td>
						

