html
	head
		title Sisizathu Training Dashboard 
		link(href="https://fonts.googleapis.com/css?family=Open+Sans:400,700,800" rel="stylesheet")
		link(href="https://fonts.googleapis.com/css?family=Playfair+Display:400,700" rel="stylesheet")
		link(rel="stylesheet" href="css/animate.css")
		link(rel="stylesheet" href="css/icomoon.css")
		link(rel="stylesheet" href="css/bootstrap.css")
		link(rel="stylesheet" href="css/magnific-popup.css")
		link(rel="stylesheet" href="css/flexslider.css")
		link(rel="stylesheet" href="css/owl.carousel.min.css")
		link(rel="stylesheet" href="css/owl.theme.default.min.css")
		link(rel="stylesheet" href="fonts/flaticon/font/flaticon.css")
		link(rel="stylesheet" href="css/style.css")
		script(src="js/modernizr-2.6.2.min.js")
		style.
			.btn{border-radius:0%}
	body
		style.
			a {color:white;cursor:hand}
		div(id="page")
			nav(class="colorlib-nav" role="navigation")
				div(class="upper-menu")
					div(class="container")
						div(class="row")
							div(class="col-xs-4")
								p(style="color:white") Sisizathu Training Student Dashboard
							
							div(class="col-xs-6 col-md-push-2 text-right")
								p(style="color:white") <a href="/">Sign Out</a>
			div(class="col-lg-12" style="padding-top:15px")
				table(class="table")
					thead
						tr <th>#</th> <th>Name</th> <th>Course</th> <th>Date registered</th> <th>Documents</th> <th>Update Documents</th> 

					tbody
						tr.
							<td class="active">1</td> 
							<td>#{student.name} #{student.s_name}</td> 
							<td>#{student.course}</td>
							<td>#{student.date_registered.toDateString()}</td>
							<td>
							#{student.documents[0]} <br/>
							#{student.documents[1]} <br/>
							#{student.documents[2]} <br/>
							#{student.documents[3]} <br/>
							#{student.documents[4]} <br/>
							#{student.documents[5]}
							</td>
							<td><input type="file"/>
				.col-lg-6(style="padding-top:2%")
					&nbsp;&nbsp;&nbsp;&nbsp;<a href="/course" class="btn-sm btn-warning"> Go To Course </a>&nbsp;&nbsp;&nbsp;&nbsp;<a class="btn-sm btn-info"> Write Exam </a> &nbsp;&nbsp;&nbsp;&nbsp;<a class="btn-sm btn-success">View Results </a>
			div(class="col-md-12 text-center")
				small(class="block" style="color:silver")
