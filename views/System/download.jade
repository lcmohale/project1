html
	head
		title Sisizathu Training Exam 
		link(rel="stylesheet" href="/css/animate.css")
		link(rel="stylesheet" href="/css/icomoon.css")
		link(rel="stylesheet" href="/css/bootstrap.css")
		link(rel="stylesheet" href="/css/magnific-popup.css")
		link(rel="stylesheet" href="/css/flexslider.css")
		link(rel="stylesheet" href="/css/owl.carousel.min.css")
		link(rel="stylesheet" href="/css/owl.theme.default.min.css")
		link(rel="stylesheet" href="/fonts/flaticon/font/flaticon.css")
		link(rel="stylesheet" href="/css/style.css")
		script(src="/js/jquery.js")
		script(src="/js/sisizathu.js")
		script(src="/js/modernizr-2.6.2.min.js")
		style.
			.btn{border-radius:0%}
	body
		style.
			a {color:white;cursor:hand}
		div(id="page")
			nav(class="colorlib-nav" role="navigation")
				div(class="upper-menu")
					div(class="container")
						div(class="row")
							div(class="col-xs-4")
								p(style="color:white") Sisizathu Training Admin | Download Student Documents
							div(class="col-xs-6 col-md-push-2 text-right")
								p(style="color:white") <a onclick="history.go(-2)" >Back</a> | <a href="/admin?students=registered"> Students</a> | <a href="/">Sign Out</a>
			div(class="col-lg-12" style="padding-top:15px; text-align:left")
				div(style="padding-left:13%;padding-top:5%")
					p(class="bg-success" style="padding-left:5px") Student Name: #{name} #{surname}
					p
						span(class="btn-warning" style="padding-left:5px") End User Computing End User Examination Unit 1.1 
						br
						br
						table(class="table")
							tbody
								- each doc in documents
									tr(style="font-size:11pt").
										<td class="active">#{doc}</td> 
										<td style="padding-right:20%"><a onclick="downlDoc('#{doc}')" class="btn-sm btn-success"> Download </a></td>
			div(class="col-md-12 text-center")
				small(class="block" style="color:silver")
